      }
    },
    "browser_support": [
      "Chrome 90+",
      "Firefox 88+", 
      "Safari 14+",
      "Edge 90+"
    ],
    "device_testing": [
      "Mobile (375px - 767px)",
      "Tablet (768px - 1279px)",
      "Desktop (1280px+)"
    ],
    "performance_targets": {
      "page_load": "< 3 seconds",
      "api_response": "< 2 seconds",
      "memory_usage": "< 100MB"
    }
  }
}