{
  "name": "oauth-tests",
  "version": "1.0.0",
  "description": "OAuth integration tests for QuantumLeap Trading Backend",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:oauth": "jest oauth/",
    "test:integration": "jest integration.test.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "axios": "^1.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "../modules/auth/**/*.js",
      "!../modules/auth/models/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "./coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/*.test.js"
    ],
    "setupFilesAfterEnv": ["<rootDir>/setup.js"]
  }
}